<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1">

   @if (ViewBag.Title != null)
   {
      <title>@ViewBag.Title | Actris</title>
   }
   else
   {
      <title>Actris</title>
   }


   <link rel="preconnect" href="https://fonts.googleapis.com">
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
   <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
   <link rel="icon" type="image/x-icon" href="~/Assets/pertamina.png">
   <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
   <link href="~/Scripts/select2/select2.css" rel="stylesheet" />
   <link href="~/Scripts/summernote/summernote-bs5.min.css" rel="stylesheet" />
   <link href="~/Scripts/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
   @Styles.Render("~/Content/css")
   @Styles.Render("~/Content/fontawesome/css/bundle")
   @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   <div class="main-layout">
      @Html.Action("UserHeader", "Account", new { Area = "" })
      <div>
         @Html.Partial("Layout/_Sidebar")
         <div>
            <main>
               @RenderBody()
            </main>
         </div>

      </div>
   </div>
   @*TOAST FEEDBACK SUCCESS*@
   <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 5000">
      <div id="toastSuccess" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
         <div class="toast-header">
            <i class="fa-solid fa-check  me-2 text-success"></i>
            <strong class="me-auto">Success</strong>
            <small class="text-muted">just now</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
         </div>
         <div class="toast-body">

         </div>
      </div>
   </div>

   @*TOAST FEEDBACK ERROR*@
   <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 5000">
      <div id="toastError" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
         <div class="toast-header">
            <i class="fa-solid fa-triangle-exclamation  me-2 text-danger"></i>
            <strong class="me-auto">Failed</strong>
            <small class="text-muted">just now</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
         </div>
         <div class="toast-body">
         </div>
      </div>
   </div>
   @Scripts.Render("~/bundles/jquery")
   @Scripts.Render("~/bundles/bootstrap")
   @RenderSection("scripts", required: false)
  
   <script src="~/Scripts/moment/moment.js"></script>
   <script src="~/Scripts/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
   <script src="~/Scripts/autonumeric/autonumeric.min.js"></script>
   <script src="~/Scripts/select2/select2.js"></script>
   <script src="~/Scripts/SingleSidebar.js"></script>
   <script src="~/Scripts/summernote/summernote-bs5.min.js"></script>
</body>


</html>